@model IEnumerable<Capstone_20130302.Models.Product>

@{
    ViewBag.Title = "Product Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery.dataTables.js"></script>
<script src="~/Scripts/dataTables.bootstrap.js"></script>


<script type="text/javascript" charset="utf-8">

    $(document).ready(function () {
        $('#example').dataTable({
            "sDom": "<'row spare-down'<'span4'f><'span3'l>r>t<'row'<'span3'i><'span8'p>>",
            "sPaginationType": "bootstrap",
            "oLanguage": {
                "sLengthMenu": "_MENU_ records per page"
            }
        });

        function updateProductStatus(pid, stt) {
            $.ajax({
                url: "/Admin/UpdateProductStatus",
                type: 'POST',
                data: { productID: pid, status: stt },
                success: function (response) {
                    if (response == "OK") {
                        $('#status-' + pid).text(stt);
                        $.pnotify({
                            title: 'Update Success',
                            text: 'The status has been updated.',
                            type: 'success',
                            styling: 'bootstrap',
                            delay: 500
                        });
                    }
                    else {
                        $.notification(
					        {
					            title: "Status Update Failed",
					            content: "Please check again.",
					            error: true
					        }
				        );
                    }
                }
            });

            //$('#regisModal').find('input#regis').click();
        }

        $(".changeStatus").change(function () {
            var productID = $(this).data("pid");
            //alert(productID);
            var status = $('#n-status-' + productID + ' option:selected').text();
            //alert(status);
            updateProductStatus(productID, status);
        });

        $(".addPick").click(function () {
            var pid = $(this).data("pid");
            //alert(productID);

            $.ajax({
                url: "/Admin/AddEditorPick",
                type: 'POST',
                data: { productID: pid },
                success: function (response) {
                    if (response == "OK") {
                        $.pnotify({
                            title: 'Add Editor Pick Success',
                            text: 'Added Editor Pick Success.',
                            type: 'success',
                            styling: 'bootstrap',
                            delay: 500
                        });
                    }
                    else {
                        $.notification(
					        {
					            title: "Added Failed",
					            content: "Please check again.",
					            error: true
					        }
				        );
                    }
                }
            });
        });
        $(".minusPick").click(function () {
            var pid = $(this).data("pid");
            //alert(productID);
            $.ajax({
                url: "/Admin/RemoveEditorPick",
                type: 'POST',
                data: { productID: pid },
                success: function (response) {
                    if (response == "OK") {
                        $.pnotify({
                            title: 'Remove Editor Pick Success',
                            text: 'Removed Editor Pick Success.',
                            type: 'success',
                            styling: 'bootstrap',
                            delay: 500
                        });
                    }
                    else {
                        $.notification(
					        {
					            title: "Removed Failed",
					            content: "Please check again.",
					            error: true
					        }
				        );
                    }
                }
            });
        });
    });
</script>


@if (Model.ToList().Count > 0)
{
    <div class="form-inline data-content">
        <table cellpadding="0" cellspacing="0" border="0" class="display table table-striped table-bordered" id="example">
            <thead>
                <tr>
                    <th>Product Name
                    </th>
                    <th>Store Name
                    </th>
                    <th>Create Date
                    </th>
                    <th>Status
                    </th>

                    <th>Action </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Store.StoreName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        <td data-pid="@item.ProductId" id= "status-@item.ProductId">
                            @Html.DisplayFor(modelItem => item.Status.Name)
                        </td>
                        <td data-pid="@item.ProductId">
                            <a href="/Product/Id/@item.ProductId"><i class="icon-search"></i>View</a>
                            Editor Picks
                            <a href="#" data-pid="@item.ProductId" class="addPick"><i class="addPick"></i>[+]</a>
                            <a href="#" data-pid="@item.ProductId" class="minusPick"><i class="minusPick"></i>[-]</a>
                            @Html.DropDownList("StatusID", (SelectList)ViewBag.StatusID, "- Update -", new { id = "n-status-" + @item.ProductId, @class = "changeStatus span2", data_pid = @item.ProductId })
                            @*<a href="Store/Delete/@item.StoreId"><i class="icon-trash"></i></a>*@
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}
else
{
    <text>no product.</text>
}