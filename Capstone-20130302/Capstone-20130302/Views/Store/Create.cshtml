@model Capstone_20130302.Models.Store

@{
    ViewBag.Title = "Open a Store";
}
<a href="/Store"><i class='icon icon-circle-arrow-left'></i> Back to Product List</a>
@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Store Design</legend>
        <div class="editor-field">
            <div class="upload-wrapper">
                <div>
                    <img style="height: 140px; margin-bottom: 20px;" src="/Images/placeholder.png"><br>
                    <h4 style="margin: 0">Cover Image</h4>
                    <p>Tip: Make it unique. Choose it nicely.</p>
                </div>
            </div>
            <input id="cover-image" name="CoverImage" style="display: none;" type="file" accept="image/*" />
        </div>
        <legend>Store Details</legend>
        <div class="row">
            <div class="span3">
                <div class="avatar-wrapper">
                    <div class="image-upload">
                        <div class="image" data-toggle="tooltip" title="Upload your Store avatar">
                        </div>
                    </div>
                </div>
                <input type="file" id="file-select" name="StoreAvatar" required="required"/>
            </div>
            <div class="span8">
                <div class="editor-label">
                    @Html.LabelFor(model => model.StoreName)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.StoreName, new { @class = "span5" })
                    @Html.ValidationMessageFor(model => model.StoreName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Description)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(model => model.Description, new { @class = "span5", cols = "3" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.ContactNumber)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.ContactNumber, new { @class = "span5" })
                    @Html.ValidationMessageFor(model => model.ContactNumber)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.Slogan)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Slogan, new { @class = "span5" })
                    @Html.ValidationMessageFor(model => model.Slogan)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.ShipFee)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.ShipFee, new { @class = "span5" })
                    @Html.ValidationMessageFor(model => model.ShipFee)
                </div>
                <br />
                <input type="submit" class="btn span3" value="Create" />
            </div>
        </div>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<style>
    .image-upload .image {
        width: 160px;
        height: 160px;
        border: solid 5px #FFF;
        box-shadow: 1px 1px 4px #C0C0C0;
        cursor: pointer;
        text-align: center;
        background: url(../Images/no-store.jpg) no-repeat;
        background-size: 100%;
    }

        .image-upload .image img {
            width: 100%;
            height: 100%;
        }

    #file-select {
        display: none;
    }

    .avatar-wrapper {
        width: 160px;
    }

    #profile {
        margin: 0 auto 50px;
        width: 460px;
    }

    .simple-wrapper {
        width: 700px;
    }
</style>
<script>
    $(function () {

        $(".upload-wrapper").click(function () {
            $("#cover-image").trigger("click");
        })

        $("#cover-image").change(function () {
            var f = $("#cover-image")[0].files[0]
            if (!f.type.match(/image.*/)) {
                alert("Please select image");

                return
            }
            var reader = new FileReader();
            reader.onload = (function (theFile) {
                return function (e) {
                    $(".upload-wrapper").html("<img src='" + e.target.result + "' width='100%' height='100%'/>");
                }
            })(f);

            reader.readAsDataURL(f);
        })


        $(".image-upload .image").click(function () {
            $("#file-select").trigger("click");
        })

        $("#file-select").change(function () {
            var f = $("#file-select")[0].files[0]
            if (!f.type.match(/image.*/)) {
                alert("Please select image");

                return
            }
            var reader = new FileReader();
            reader.onload = (function (theFile) {
                return function (e) {
                    $(".image-upload .image").html("<img src='" + e.target.result + "' width='100%' height='100%'/>");
                }
            })(f);

            reader.readAsDataURL(f);
        })
    });
</script>
