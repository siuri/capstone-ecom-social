@model IEnumerable<Capstone_20130302.Models.Store>

@{
    ViewBag.Title = "Index";
}
<h2>Index</h2>
        <link href="~/Content/demo_page.css" rel="stylesheet" />
        <link href="~/Content/demo_table.css" rel="stylesheet" />
       <script src="~/Scripts/jquery.dataTables.js"></script>
		
        <script type="text/javascript" charset="utf-8">
			$(document).ready(function() {
				$('#example').dataTable();
			} );
		</script>



<p id ="create" class ="create">
    @Html.ActionLink("Create New", "Create")
</p>



<table cellpadding="0" cellspacing="0" border="0" class="display" id="example">
	<thead>
		<tr>
        <th>
            @Html.DisplayNameFor(model => model.StoreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            Open Order
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
  
        <th>   Action </th>
    </tr>
	</thead>
	<tbody>

        @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StoreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StoreId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StoreId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StoreId })
        </td>
    </tr>
}		
	</tbody>
	
</table>

