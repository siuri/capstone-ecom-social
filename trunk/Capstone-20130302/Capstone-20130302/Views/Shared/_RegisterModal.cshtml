@model Capstone_20130302.Models.RegisterModel


<!-- Modal -->
<div id="register-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-logo"></div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Become a Member</h3>
    </div>
    <div class="modal-body">
        <section id="registerForm">
            <form action="/Account/Register" method="post" novalidate="novalidate">
                @Html.AntiForgeryToken()

                <ul>
                    <li style="display:none"></li>
                </ul>
                <ul>
                    <li>
                        <input placeholder="User name" data-val="true" data-val-required="The User name field is required." id="UserName" name="UserName" type="text">
                    </li>
                    <li>
                        <input placeholder="Password" data-val="true" data-val-length="The Password must be at least 6 characters long." data-val-length-max="100" data-val-length-min="6" data-val-required="The Password field is required." id="Password" name="Password" type="password">
                    </li>
                    <li>
                        <input placeholder="Confirm Password" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" id="ConfirmPassword" name="ConfirmPassword" type="password" class="valid">
                    </li>
                </ul>
                <input type="submit" class="btn" value="Register">
            </form>
        </section>
    </div>
    <div class="modal-footer">
        Register with Facebook account @Html.Action("ExternalLoginsList", "Account", new { ReturnUrl = ViewBag.ReturnUrl })
    </div>
    @Scripts.Render("~/bundles/jqueryval")
</div>


