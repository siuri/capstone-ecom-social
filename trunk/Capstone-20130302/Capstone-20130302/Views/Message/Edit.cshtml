@model Capstone_20130302.Models.Message

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Message</legend>

        @Html.HiddenFor(model => model.MessageId)

        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubjectId)
            @Html.ValidationMessageFor(model => model.SubjectId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectTypeId, "SubjectType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("SubjectTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.SubjectTypeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ObjectId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ObjectId)
            @Html.ValidationMessageFor(model => model.ObjectId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ObjectTypeId, "ObjectType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ObjectTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.ObjectTypeId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MessageTypeId, "MessageType")
        </div>
        <div class="editor-field">
            @Html.DropDownList("MessageTypeId", String.Empty)
            @Html.ValidationMessageFor(model => model.MessageTypeId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
